# EditorConfig - 統一的なコーディングスタイル設定
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,html,css}]
indent_size = 2

[*.{json,md}]
indent_size = 2

[*.html]
insert_final_newline = false

[package.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# Windowsバッチファイル
[*.{bat,cmd}]
end_of_line = crlf

# Node.jsスクリプト
[scripts/**]
indent_size = 2
